<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/LinearLayout01" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:orientation="horizontal"
	android:padding="3dip">

	<ImageView android:id="@+id/ImageViewa"
		android:layout_width="40dip" 
		android:layout_height="40dip"
		android:src="@drawable/btn_star_big_off_disable"/>
		
	<LinearLayout android:id="@+id/LinearLayout04"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginLeft="10dip">

		<LinearLayout android:id="@+id/LinearLayout02"
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:orientation="horizontal">

			<TextView android:id="@+id/TextViewListNivel"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:text="NÃ­vel 1"
				android:layout_gravity="left" 
				android:layout_weight="1"
				android:textColor="#FFFFFF"
				android:textSize="16sp"
				android:textStyle="bold" 
				android:shadowColor="#545454"
				android:shadowRadius="1.5" 
				android:shadowDx="1" 
				android:shadowDy="1"
				android:paddingLeft="5dip" />

			<TextView android:id="@+id/TextViewListNumDisco"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:text="10 DISCOS"
				android:layout_gravity="right" 
				android:textColor="#FFFFFF"
				android:textStyle="italic"
				android:textSize="15sp" 
				android:paddingRight="5dip" />
		</LinearLayout>

		<LinearLayout android:id="@+id/LinearLayout03"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:orientation="horizontal">

			<TextView android:id="@+id/TextViewListMovimentos"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:text="0 de 7"
				android:layout_gravity="left" 
				android:textStyle="bold|italic"
				android:layout_weight="1" 
				android:paddingTop="5dip"
				android:paddingLeft="5dip" 
				android:paddingBottom="5dip" />
				
			<TextView android:id="@+id/TextViewListTempo"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:text="00:00"
				android:layout_gravity="right" 
				android:textSize="12sp" 
				android:textStyle="bold|italic"
				android:paddingTop="5dip"
				android:paddingRight="5dip" 
				android:paddingBottom="5dip" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>