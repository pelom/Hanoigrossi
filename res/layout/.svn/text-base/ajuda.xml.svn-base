<ScrollView 
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		>
		
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/about_layout"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_centerVertical="true"
			  android:layout_centerHorizontal="true" 
			  android:background="@drawable/bg_menu_geral">
	
	
	 <ImageView android:id="@+id/logo"
               android:layout_width="fill_parent"
               android:layout_height="96dip"
			   android:layout_gravity="left"
			   android:scaleType="fitStart"
               android:src="@drawable/logo" 
               android:layout_marginLeft="5dip"
               />
               
	 <TextView android:id="@+id/torre"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:text="Torre de HanÃ³i"
               android:textSize="16dip"
               android:layout_marginLeft="4dip"
               />
               	        
    <TextView  xmlns:android="http://schemas.android.com/apk/res/android"
    		   android:id="@+id/info"
    		   android:layout_margin="5dip"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/ajuda_torredehanoi"
               android:textColor="#FFFFFF"
               android:textSize="14dip"
               android:autoLink="all"
               />
               
      <TextView android:id="@+id/problema"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:text="Problema"
               android:textSize="16dip"
               android:layout_marginLeft="4dip"
               /> 
               
       <TextView  xmlns:android="http://schemas.android.com/apk/res/android"
    		   android:id="@+id/info"
    		   android:layout_margin="5dip"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/ajuda_torredehanoi_problema"
               android:textColor="#FFFFFF"
               android:textSize="14dip"
               android:autoLink="all"
               />
            
	<ImageView android:id="@+id/imagem"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
			   android:layout_gravity="center_horizontal"
			   android:scaleType="fitStart"
               android:src="@drawable/torre_de_hanoi" 
               android:layout_marginLeft="5dip"
               />
                 
        <TextView android:id="@+id/curiosidade"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:text="Curiosidade"
               android:textSize="16dip"
               android:layout_marginLeft="4dip"
               />
               
         <TextView  xmlns:android="http://schemas.android.com/apk/res/android"
    		   android:id="@+id/info"
    		   android:layout_margin="5dip"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/ajuda_torredehanoi_curiosidade"
               android:textColor="#FFFFFF"
               android:textSize="14dip"
               android:autoLink="all"
               />
         
</LinearLayout>
 </ScrollView>