<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/about_layout"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_centerVertical="true"
			  android:layout_centerHorizontal="true" 
			  android:background="@drawable/bg_menu_geral">
          
			    
    <ImageView android:id="@+id/logo"
               android:layout_width="fill_parent"
               android:layout_height="96dip"
			   android:layout_gravity="left"
			   android:scaleType="fitStart"
               android:src="@drawable/logo" 
               android:layout_marginLeft="5dip"
               />
               
    <TextView android:id="@+id/copyright"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:text="Copyright (C) 2011 AndrÃ© Leite (Pelom)"
               android:textSize="12dip"
               android:layout_marginLeft="4dip"
               />
          
    <TextView  xmlns:android="http://schemas.android.com/apk/res/android"
    		   android:id="@+id/info"
    		   android:layout_margin="5dip"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/sobre"
               android:textColor="#FFFFFF"
               android:textSize="14dip"
               android:autoLink="all"
               />
               
	<TextView android:id="@+id/contribuicao"
    		   android:layout_margin="5dip"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:gravity="left"
               android:text="@string/sobre_textcontrubuicao"
               android:textColor="#FFFFFF"
               android:textSize="14dip"
               />
      
       <TextView android:id="@+id/Grossi"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:gravity="center_horizontal"
               android:text="@string/sobre_textgrossi"
               android:autoLink="web"
               android:textSize="14dip"
               android:paddingBottom="10dip"
               />
                        
    <TextView android:id="@+id/GledsonRodigues"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:gravity="center_horizontal"
               android:text="@string/sobre_textgledsonrodrigues"
               android:autoLink="web"
               android:textSize="14dip"
               android:paddingBottom="10dip"
               />
               
</LinearLayout>